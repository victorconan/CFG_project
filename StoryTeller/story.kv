
<Root>:
    orientation: 'vertical'
    RecordButton:
        id: record_button
        text: 'Record Story'
        on_release: self.record()
        height: '50dp'
        size_hint_y: None

    PlayButton:
        id: play_button
        text: 'Play Story'
        on_release: self.play(textinput.text)
        height: '50dp'
        size_hint_y: None

    LargeButton:
        id: small_button
        text: 'Tt'
        font_size: '20dp'
        height: '40dp'
        width: '40dp'
        size_hint_y: None

    TextInput:
        id: textinput
        text: record_button.output
        font_size: record_button.outputsize